    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Software developer passionate about building purposeful products."
    />
    <title>Nico D.</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<script>
  function updateClass(isDark: boolean) {
    document.documentElement.classList[isDark ? "add" : "remove"]("dark");
  }

  const darkMedia = window.matchMedia("(prefers-color-scheme: dark)");

  updateClass(darkMedia.matches);
  darkMedia.addEventListener("change", (e) => updateClass(e.matches));
</script>
